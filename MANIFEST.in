include pyproject.toml
include README.md
include LICENSE

recursive-include src/manifestinx *.py
recursive-include src/manifestinx/schemas *.json
include src/manifestinx/py.typed

# Defensive: ensure non-core never lands in sdist even if accidentally re-added
prune src/inxzap
prune src/manifestinx/data

prune tests
prune .github
prune dist
prune build
prune .venv

# Exclude common build/cache dirs explicitly
prune __pycache__
prune .pytest_cache
prune *.egg-info

global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store